- var title = 'Home'

doctype html
html
	head
		include ./head.pug
	body
		div(class='ui container')
			include ./header.pug
			include ./menu.pug
			h2 Blog
			h3 Edit a Blog Post
			form(class="ui edit form" method="POST" action="/admin/blog/"+blog.id+"/edit")
				div(class="field")
					label Title
					input(type="text" name="title" value=blog.title)
				div(class="field")
					label Content
					textarea(rows="5" name="content" id="editor1")=blog.content
				button(type="submit" class="ui submit button") 
					i(class="save icon")
					| Save

		script.
			CKEDITOR.replace( 'editor1' );
